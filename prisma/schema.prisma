generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  emailVerified DateTime?
  name          String?
  image         String?
  username      String?   @unique

  // Authentication
  accounts      Account[]
  sessions      Session[]

  // Profile
  firstName     String?
  lastName      String?
  phone         String?
  bio           String?
  location      String?
  timezone      String?   @default("UTC")

  // Status
  status        UserStatus @default(ACTIVE)
  role          UserRole   @default(USER)

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?

  // Soft delete
  deletedAt     DateTime?

  // Relationships
  activities    Activity[]
  preferences   UserPreferences?
  notifications Notification[]

  // Indexes
  @@index([email])
  @@index([username])
  @@index([status])
  @@index([role])
  @@index([createdAt])
  @@index([deletedAt])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              AccountType
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Compound unique constraint for provider + providerAccountId
  @@unique([provider, providerAccountId])
  @@unique([provider, userId])

  // Indexes
  @@index([userId])
  @@index([provider])
  @@index([providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  // Session metadata
  userAgent    String?
  ipAddress    String?
  country      String?
  city         String?

  // Timestamps
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relationships
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Indexes
  @@index([userId])
  @@index([sessionToken])
  @@index([expires])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  // Type can be for email verification, password reset, etc.
  type       VerificationTokenType @default(EMAIL_VERIFICATION)

  // Timestamps
  createdAt  DateTime @default(now())

  // Compound unique constraint
  @@unique([identifier, token])
  @@index([token])
  @@index([expires])
  @@index([identifier])
}

model UserPreferences {
  id              String    @id @default(cuid())
  userId          String    @unique

  // Email preferences
  emailNotifications  Boolean @default(true)
  marketingEmails     Boolean @default(false)
  securityAlerts      Boolean @default(true)

  // UI/UX preferences
  theme           String    @default("light") // light, dark, system
  language        String    @default("en")
  timeFormat      String    @default("24h")   // 12h or 24h
  dateFormat      String    @default("YYYY-MM-DD")

  // Privacy settings
  profileVisible  Boolean   @default(true)
  activityVisible Boolean   @default(true)

  // Notification channels
  pushEnabled     Boolean   @default(true)
  desktopEnabled  Boolean   @default(true)
  mobileEnabled   Boolean   @default(true)

  // Timestamps
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relationships
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Activity {
  id          String      @id @default(cuid())
  userId      String
  type        ActivityType
  action      String
  description String?
  metadata    Json?

  // Device/context info
  userAgent   String?
  ipAddress   String?
  country     String?
  city        String?

  // Timestamps
  createdAt   DateTime    @default(now())

  // Relationships
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Indexes
  @@index([userId])
  @@index([type])
  @@index([createdAt])
  @@index([userId, type])
}

model Notification {
  id          String          @id @default(cuid())
  userId      String
  type        NotificationType
  title       String
  message     String
  link        String?
  read        Boolean         @default(false)
  metadata    Json?

  // Timestamps
  createdAt   DateTime        @default(now())
  readAt      DateTime?
  expiresAt   DateTime?

  // Relationships
  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Indexes
  @@index([userId])
  @@index([read])
  @@index([createdAt])
  @@index([userId, read])
}

model ApiKey {
  id          String      @id @default(cuid())
  userId      String
  name        String
  key         String      @unique
  prefix      String
  lastUsedAt  DateTime?
  expiresAt   DateTime?

  // Permissions
  permissions String[]    // Array of permission strings

  // Status
  status      ApiKeyStatus @default(ACTIVE)

  // Timestamps
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relationships
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Indexes
  @@index([userId])
  @@index([key])
  @@index([prefix])
  @@index([status])
}

// Enums
enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  BANNED
}

enum UserRole {
  USER
  MODERATOR
  ADMIN
  SUPER_ADMIN
}

enum AccountType {
  OAUTH
  EMAIL
  SMS
  API_KEY
}

enum VerificationTokenType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
  ACCOUNT_RECOVERY
  TWO_FACTOR
  INVITATION
}

enum ActivityType {
  LOGIN
  LOGOUT
  PROFILE_UPDATE
  PASSWORD_CHANGE
  EMAIL_CHANGE
  ACCOUNT_LINK
  ACCOUNT_UNLINK
  SUBSCRIPTION
  PAYMENT
  API_CALL
  SECURITY
}

enum NotificationType {
  SYSTEM
  SECURITY
  ACCOUNT
  BILLING
  ANNOUNCEMENT
  PROMOTIONAL
}

enum ApiKeyStatus {
  ACTIVE
  INACTIVE
  REVOKED
  EXPIRED
}

